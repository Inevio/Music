
{

    "name"    : "Music Player",
    "version" : "1.0",
    "stage"   : "beta",
    "api"     : "a100d2",

    "language" : {

        "default" : "en-en",
        "list"    : [ "en-en" ]

    },

    "device" : {

        "desktop" : {

            "primary" : "main",
            "unique"  : true,
            "service" : [],
            "common"  : {

                "css"    : [],
                "script" : [],
                "start"  : []

            },

            "view" : {

                "main" : {

                    "template" : "main.html",

                    "maxizable" : false,
                    "resizable" : false,

                    "width"  : {

                        "default" : 710,
                        "min"     : 0,
                        "max"     : 0

                    },

                    "height" : {

                        "default" : 400,
                        "min"     : 0,
                        "max"     : 0

                    },

                    "css"    : ["style.css"],
                    "script" : ["script.js"]

                }

            }

        },

        "mobile" : {

            "primary" : "main",
            "service" : [],
            "common"  : {

                "css"    : [],
                "script" : [],
                "start"  : []

            },

            "view" : {

                "main" : {

                    "template" : "mainMobile.html",
                    "css"    : ["styleMobile.css"],
                    "script" : ["scriptMobile.js"],
                    "start"  : []

                }

            }

        }

    },

    "permission" : {

        "fs" : {

            "read" : true

        },

        "integration" : {

            "dropbox"   : true,
            "gdrive"    : true,
            "onedrive"  : true,
            "gmail"     : true

        }

    },

    "stats" : {

        "active-dau" : "visible"

    }

}
